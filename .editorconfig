root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 4

max_line_length = 120

[*.java]
indent_size = 4
continuation_indent_size = 8

[*.gradle.kts]
indent_size = 4
continuation_indent_size = 4

[*.toml]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.sh]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off
